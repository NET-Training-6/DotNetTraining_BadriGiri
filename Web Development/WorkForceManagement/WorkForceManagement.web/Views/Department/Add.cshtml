@model Department;

<div class="card border-1">
    <div class="card-body">
        <form class="row g-3" action="/department/add" method="post">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for=Name class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-md-6">
                <label asp-for=Established class="form-label">Established</label>
                <input asp-for=Established class="form-control">
            </div>


            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>