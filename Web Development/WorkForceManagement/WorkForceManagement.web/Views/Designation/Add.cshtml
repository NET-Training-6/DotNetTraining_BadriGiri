@model Designation;

<div class="card border-1">
    <div class="card-body">
        <form class="row g-3" action="/designation/add" method="post">
            
            <div class="col-md-6">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for=Description class="form-label">Description</label>
                <input asp-for=Description class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for=PayRange class="form-label">Pay-Range</label>
                <input asp-for=PayRange class="form-control">
            </div>


            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>