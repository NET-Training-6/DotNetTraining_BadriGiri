<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkForceManagement.web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkForceManagement.web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo2.png" height="40"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Employees
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/employee/index"><i class="bi bi-list"></i> All Employees</a></li>
                                <li><a class="dropdown-item" href="/employee/Add"><i class="bi bi-plus-lg"></i> Add Employee</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-plus-lg"></i> Get Employees (ADO.NET)</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item bi bi-card-checklist" href="/department/index"><i class="bi bi-list"></i> All Departments</a></li>
                                <li><a class="dropdown-item" href="/department/Add"><i class="bi bi-plus-lg"></i> &#43; Add New Department</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item bi bi-card-checklist" href="/auth/roles"><i class="bi bi-list"></i> Roles</a></li>
                                <li><a class="dropdown-item" href="/auth/addrole"><i class="bi bi-plus-lg"></i> Add Role</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i> Designation
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item bi bi-card-checklist" href="/designation/index"><i class="bi bi-list"></i> All Designation</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/designation/Add"><i class="bi bi-plus-lg"></i> &#43; Add New Department</a></li>

                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial">
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - WorkForceManagement(By .NET Training)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
